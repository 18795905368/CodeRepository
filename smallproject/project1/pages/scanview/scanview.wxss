/* pages/scanview/scanview.wxss */
.baseview{

  width: 100%;
  height: 100vh;

}
.topview{
  width: 100%;
  height: 12%;
  background-color: aquamarine;
  display: flex;
  justify-content: center;
  align-items: center;
}
.itemview{
  width: 90%;
  height: 50%;
  background-color: white;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.itview{
  width: 50%;
  height: 100%;
  display: flex;

  align-items: center;
}
.cimg{
  width: 15%;
  height: 60%;
}
.scan{
  width: 8%;
  height: 60%;
}

.mainview{
  width: 100%;
  height: 15%;
  background-color: lavender;
}
.goodsitem{
  width: 100%;
  height: 33%;
  font-family: 楷体;
}
.shop{
  width: 100%;
  height: 6%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid whitesmoke;
}
.shopname{
  width: 50%;
  height: 100%;
  font-family: 楷体;
}
.price{
  width: 20%;
  height: 100%;
  font-family: 楷体;
}
.shoplist{
  width: 100%;
  height: 8%;
  background-color: whitesmoke;
  display: flex;
  align-items: center;
  font-family: 楷体;
  font-weight: bold;
}