/* pages/my/my.wxss */
.baseview{
  width: 100%;
  height: 100vh;
  background-color: seashell;
}
.topview{
  width: 100%;
  height: 30%;
  border-bottom: 1rpx solid black;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.imgview{
  width: 30%;
  height: 70%;
  border: 2rpx solid black;
  margin: 10rpx;
}
.cimg{
  width: 100%;
  height: 100%;
}
.textview{
  width: 30%;
  height: 15%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.mainview{
  width: 100%;
  height: 70%;
}
.cellview{
  width: 100%;
  height: 10%;
  border-bottom: 1rpx solid black;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.view1{
  width:40%;
  height: 80%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.view2{
  width:8%;
  height: 80%;
}
.cellimg{
  width: 20%;
  height: 90%;
}
.celltext{
  width: 65%;
  height: 90%;
}